<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="poc_maui.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:poc_maui.Views"
    Shell.FlyoutBehavior="Disabled">

    <TabBar x:Name="Tabs" IsVisible="True">
        <Tab Title="Files" >
            <ShellContent ContentTemplate="{DataTemplate local:AttachmentsPage}"/>
        </Tab>
        <Tab Title="Landing" >
            <ShellContent ContentTemplate="{DataTemplate local:LandingPage}"/>
        </Tab>
    </TabBar>
</Shell>

